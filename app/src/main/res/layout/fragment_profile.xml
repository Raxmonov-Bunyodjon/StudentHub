<?xml version="1.0" encoding="utf-8"?>
<!--
ðŸ”¹ fragment_profile.xml

This layout file represents the "Profile" screen.
Each UI element displays user information and provides the ability to change the profile picture.

Elements:
1. Header background â†’ creates the top section background.
2. ProfileImageContainer â†’ contains the profile picture + camera icon overlay.
3. ScrollView â†’ shows user information cards (First Name, Last Name, Username).
-->
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!-- ðŸ”¹ Header background -->
    <FrameLayout
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <!-- Profile picture container -->
        <FrameLayout
            android:id="@+id/profileImageContainer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center|bottom">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_bottom_sheet"/>

            <!-- Camera overlay -->
            <ImageView
                android:id="@+id/btnChangeAvatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/outline_add_a_photo_24"
                android:background="@drawable/bg_bottom_sheet"
                android:padding="3dp"
                android:elevation="7dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="3dp"/>
        </FrameLayout>
    </FrameLayout>

    <!-- ðŸ”¹ Scrollable user info -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- First Name -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp">

                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="First Name"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Last Name -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp">

                <TextView
                    android:id="@+id/tvLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Last Name"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Username -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Username"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>




</androidx.appcompat.widget.LinearLayoutCompat>